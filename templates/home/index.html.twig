{% extends 'base.html.twig' %}

{% block title %}Hello HomeController !{% endblock %}

{% block body %}
    {% if is_logged_in %}
        <h1>Hello, {{ user.username }}!</h1> {# Affiche le nom de l'utilisateur connect√© #}
        <a href="{{ path('app_logout') }}">Logout</a>
    {% else %}
        <h1>Welcome in my site !</h1>
        <p>You must be logged in to access this section. Please login or register.</p>
        <a href="{{ path('app_login') }}">Sign in</a> <br>
        <a href="{{ path('app_register') }}">Sign up</a>
    {% endif %}
{% endblock %}
