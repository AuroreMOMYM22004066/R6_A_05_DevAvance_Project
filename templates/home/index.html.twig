{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    {% if is_logged_in %}
        <h1>Bonjour, {{ user.username }}!</h1> {# Affiche le nom de l'utilisateur connecté #}
        <a href="{{ path('app_logout') }}">Logout</a>
    {% else %}
        <h1>Bienvenue sur notre site!</h1>
        <p>Vous devez être connecté pour accéder à cette section. Veuillez vous connecter ou vous inscrire.</p>
        <a href="{{ path('app_login') }}">Se connecter</a> <br>
        <a href="{{ path('app_register') }}">S'inscrire</a> {# Lien vers la page d'inscription #}
    {% endif %}
{% endblock %}
